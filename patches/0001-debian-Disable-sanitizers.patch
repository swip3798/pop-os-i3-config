Subject: [PATCH] debian: Disable sanitizers.

---
 debian/rules | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/debian/rules b/debian/rules
index d5c3068..11918d5 100755
--- a/debian/rules
+++ b/debian/rules
@@ -15,7 +15,7 @@ override_dh_auto_test:
 
 override_dh_auto_configure:
 	# Set -Ddocdir; the default is /usr/share/doc/i3
-	dh_auto_configure -- -Ddocdir=/usr/share/doc/i3-wm -Dmans=true
+	dh_auto_configure -- -Ddocdir=/usr/share/doc/i3-wm -Dmans=true --buildtype=release -Db_sanitize=none
 
 override_dh_builddeb:
 	# bintray does not support xz currently.
